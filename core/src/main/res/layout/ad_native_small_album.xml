<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ad_view_album"
    android:layout_width="match_parent"
    android:layout_height="92dp"
    android:layout_marginHorizontal="6dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/ads_bg_album">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ad_app_icon_album"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="11dp"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ad_headline_album"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/ad_attribution_album"
            app:layout_constraintEnd_toEndOf="@id/ad_call_to_action_album"
            app:layout_constraintStart_toStartOf="@id/ad_call_to_action_album"/>

        <RatingBar
            android:id="@+id/ad_stars_album"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="2dp"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.5"
            android:theme="@style/adsRatingBar"
            app:layout_constraintBottom_toBottomOf="@id/ad_attribution_album"
            app:layout_constraintStart_toEndOf="@id/ad_attribution_album"
            app:layout_constraintTop_toTopOf="@id/ad_attribution_album"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ad_attribution_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_text_ad_album"
            android:includeFontPadding="false"
            android:text="AD"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            app:layout_constraintBottom_toTopOf="@id/ad_call_to_action_album"
            app:layout_constraintStart_toStartOf="@id/ad_call_to_action_album"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ad_call_to_action_album"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="11dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/ads_selector_bg_call_action_button_album"
            android:ellipsize="end"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textColor="@color/ads_selector_text_color_call_button_album"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ad_app_icon_album"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.gms.ads.nativead.NativeAdView>